{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs", 
    "lib": [
      "esnext.asynciterable",
      "ES2016",
      "dom"
    ],
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}